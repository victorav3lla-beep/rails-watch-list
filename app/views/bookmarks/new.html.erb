<div class="container m-4">
  <div class="my-5">
    <h1>New Movie</h1>
  </div>
  <div class="m-5 px-5">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.association :list %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
  <div>
    <%= link_to "Cancel", @list, class: "btn btn-success" %>
  </div>
</div>
