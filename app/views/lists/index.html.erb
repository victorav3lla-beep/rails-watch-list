<div class="m-4">
  <h1>My lists</h1>
</div>
<div class= "cards m-4">
  <% @lists.each do |list| %>
    <div class= "container">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1648298822205-f8c7d2469ed0?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
        <%= list.name %>
      </div>
      <div>
      <%= link_to "View list", list, class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
<div class="m-4">
  <%= link_to "Add new list", new_list_path, class: "btn btn-primary" %>
</div>
